{
    "name": "antlr4ng",
    "version": "1.1.3",
    "type": "module",
    "description": "Alternative JavaScript/TypeScript runtime for ANTLR4",
    "main": "dist/antlr4.mjs",
    "types": "src/index.d.ts",
    "repository": "https://github.com/mike-lischke/antlr4ng",
    "keywords": [
        "lexer",
        "parser",
        "antlr",
        "antlr4",
        "grammar"
    ],
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/mike-lischke/antlr4ng/issues"
    },
    "homepage": "https://github.com/mike-lischke/antlr4ng",
    "peerDependencies": {
        "antlr4ng-cli": "1.0.2"
    },
    "devDependencies": {
        "@types/node": "20.6.3",
        "@typescript-eslint/eslint-plugin": "6.7.2",
        "@typescript-eslint/parser": "6.7.2",
        "c8": "8.0.1",
        "esbuild": "0.19.3",
        "eslint": "8.50.0",
        "eslint-plugin-import": "2.28.1",
        "eslint-plugin-jsdoc": "46.8.2",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "jasmine": "5.1.0",
        "jasmine-spec-reporter": "7.0.0",
        "ts-node": "10.9.1",
        "typescript": "5.2.2"
    },
    "scripts": {
        "prepublishOnly": "npm run build && npm run test",
        "build": "esbuild ./src/index.js --bundle --outfile=dist/antlr4.mjs --format=esm --sourcemap=external --minify",
        "test": "jasmine && npm run run-benchmarks",
        "coverage": "c8 jasmine",
        "lint": "eslint src/",
        "generate-test-parser": "cli/index.js -Dlanguage=TypeScript -o spec/benchmarks/generated -visitor -listener -Xexact-output-dir spec/benchmarks/MySQLLexer.g4 spec/benchmarks/MySQLParser.g4",
        "run-benchmarks": "node --no-warnings=ExperimentalWarning --loader ts-node/esm spec/benchmarks/run-benchmarks.ts"
    },
    "engines": {
        "node": ">=16"
    },
    "exports": {
        "types": "./src/index.d.ts",
        "default": "./dist/antlr4.mjs"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ],
        "targets": "defaults"
    }
}
